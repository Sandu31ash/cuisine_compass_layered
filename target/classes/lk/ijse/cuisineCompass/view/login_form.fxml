<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="690.0" prefWidth="1360.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.cuisineCompass.controller.LoginFormController">
   <children>
      <ImageView fitHeight="690.0" fitWidth="1360.0">
         <image>
            <Image url="@image/Login_UI.png" />
         </image>
      </ImageView>
      <Button fx:id="btnLogin" blendMode="MULTIPLY" layoutX="915.0" layoutY="519.0" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="66.0" prefWidth="322.0" style="-fx-background-radius: 25;">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TextField fx:id="txtUsername" alignment="CENTER" blendMode="COLOR_BURN" layoutX="916.0" layoutY="363.0" onAction="#txtUsernameOnAction" prefHeight="66.0" prefWidth="322.0" promptText="Username" style="-fx-background-radius: 25;">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <font>
            <Font name="Gadugi Bold" size="18.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPw" alignment="CENTER" blendMode="COLOR_BURN" layoutX="916.0" layoutY="439.0" onAction="#txtPwOnAction" prefHeight="66.0" prefWidth="322.0" promptText="Password" style="-fx-background-radius: 25;">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </PasswordField>
   </children>
</AnchorPane>
